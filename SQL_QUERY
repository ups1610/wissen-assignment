// account query
CREATE TABLE ACCOUNTS (
        CUSTOMER_ID VARCHAR(50) PRIMARY KEY,
        PASSWORD VARCHAR(50),
        OLD_PASSWORD VARCHAR(50),
        IFSC VARCHAR(20),
        ACCOUNT_NO VARCHAR(20) unique,
        TYPE VARCHAR(20),
        BALANCE NUMBER(15, 2)
    );

    //transaction query
     CREATE TABLE TRANSACTIONS (
        TRANSACTION_ID NUMBER PRIMARY KEY,
        FROM_ACCOUNT VARCHAR(20),
        TO_ACCOUNT VARCHAR(20),
        AMOUNT NUMBER(15, 2),
        TRANSACTION_DATE TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
        CONSTRAINT fk_from_account FOREIGN KEY (FROM_ACCOUNT) REFERENCES ACCOUNTS(ACCOUNT_NO),
        CONSTRAINT fk_to_account FOREIGN KEY (TO_ACCOUNT) REFERENCES ACCOUNTS(ACCOUNT_NO)
    );
